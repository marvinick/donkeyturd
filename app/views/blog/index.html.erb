<% content_for :title, @meta_title %>
<% content_for :description, @meta_description %>

<div class="bg-white">
  <!-- Hero Section -->
  <div class="bg-gradient-to-r from-green-600 to-blue-600 text-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 text-center">
      <h1 class="text-4xl md:text-6xl font-bold mb-4">
        Travel Guides & City Spotlights
      </h1>
      <p class="text-xl md:text-2xl mb-8 text-green-100">
        Discover the best scenic destinations and expert travel tips for finding properties with amazing views
      </p>
    </div>
  </div>

  <!-- Featured Posts (if any) -->
  <% if @featured_posts.any? %>
    <section class="py-12 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-8">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">Featured Articles</h2>
          <p class="text-gray-600">Our most popular travel guides and destination spotlights</p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          <% @featured_posts.each do |post| %>
            <%= link_to blog_path(post), class: "group" do %>
              <article class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-shadow">
                <% if post.images.any? %>
                  <div class="aspect-video bg-gradient-to-br from-green-400 to-blue-500 relative overflow-hidden">
                    <%= image_tag post.images.first, 
                                  alt: post.title,
                                  class: "w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" %>
                    <div class="absolute top-4 left-4">
                      <span class="bg-yellow-400 text-yellow-900 text-xs font-bold px-2 py-1 rounded-full">
                        ⭐ Featured
                      </span>
                    </div>
                  </div>
                <% else %>
                  <div class="aspect-video bg-gradient-to-br from-green-400 to-blue-500 relative">
                    <div class="absolute inset-0 flex items-center justify-center">
                      <svg class="w-16 h-16 text-white/20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                      </svg>
                    </div>
                    <div class="absolute top-4 left-4">
                      <span class="bg-yellow-400 text-yellow-900 text-xs font-bold px-2 py-1 rounded-full">
                        ⭐ Featured
                      </span>
                    </div>
                  </div>
                <% end %>
                
                <div class="p-6">
                  <h3 class="text-xl font-bold text-gray-900 mb-2 group-hover:text-green-600 transition-colors">
                    <%= post.title %>
                  </h3>
                  <p class="text-gray-600 mb-4 line-clamp-3">
                    <%= post.excerpt %>
                  </p>
                  <div class="flex items-center justify-between text-sm text-gray-500">
                    <span>By <%= post.user.name %></span>
                    <div class="flex items-center space-x-4">
                      <span><%= post.reading_time %> min read</span>
                      <span><%= post.display_date_formatted %></span>
                    </div>
                  </div>
                </div>
              </article>
            <% end %>
          <% end %>
        </div>
      </div>
    </section>
  <% end %>

  <!-- All Blog Posts -->
  <section class="py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-8">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Latest Articles</h2>
        <p class="text-gray-600">Expert guides to finding the perfect scenic accommodations</p>
      </div>
      
      <% if @blog_posts.any? %>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          <% @blog_posts.each do |post| %>
            <%= link_to blog_path(post), class: "group" do %>
              <article class="bg-white border border-gray-200 rounded-lg p-6 hover:shadow-lg transition-shadow">
                <% if post.images.any? %>
                  <div class="aspect-video bg-gray-200 rounded-lg mb-4 overflow-hidden">
                    <%= image_tag post.images.first, 
                                  alt: post.title,
                                  class: "w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" %>
                  </div>
                <% else %>
                  <div class="aspect-video bg-gradient-to-br from-gray-100 to-gray-200 rounded-lg mb-4 flex items-center justify-center">
                    <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    </svg>
                  </div>
                <% end %>
                
                <div class="mb-4">
                  <% if post.featured? %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800 mb-2">
                      Featured
                    </span>
                  <% end %>
                  <h3 class="text-xl font-bold text-gray-900 mb-2 group-hover:text-green-600 transition-colors">
                    <%= post.title %>
                  </h3>
                  <p class="text-gray-600 mb-4 line-clamp-3">
                    <%= post.excerpt %>
                  </p>
                </div>
                
                <div class="flex items-center justify-between text-sm text-gray-500">
                  <span>By <%= post.user.name %></span>
                  <div class="flex items-center space-x-4">
                    <span><%= post.reading_time %> min read</span>
                    <span><%= post.published_at.strftime("%b %d, %Y") %></span>
                  </div>
                </div>
              </article>
            <% end %>
          <% end %>
        </div>
      <% else %>
        <!-- Empty State -->
        <div class="text-center py-12">
          <svg class="w-16 h-16 mx-auto text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
          <h3 class="text-lg font-medium text-gray-900 mb-2">No blog posts yet</h3>
          <p class="text-gray-600 mb-6">Check back soon for travel guides and destination spotlights!</p>
          <%= link_to "Browse Cities", cities_path, 
                      class: "inline-flex items-center px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors" %>
        </div>
      <% end %>
    </div>
  </section>
</div>

<!-- SEO Meta Tags -->
<% content_for :head do %>
  <meta name="description" content="<%= @meta_description %>">
  <meta name="keywords" content="travel guides, scenic accommodations, city spotlights, vacation rentals with views, travel tips">
  
  <!-- Open Graph -->
  <meta property="og:title" content="<%= @meta_title %>">
  <meta property="og:description" content="<%= @meta_description %>">
  <meta property="og:type" content="website">
  <meta property="og:url" content="<%= request.original_url %>">
  
  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content="<%= @meta_title %>">
  <meta name="twitter:description" content="<%= @meta_description %>">
  
  <!-- Canonical URL -->
  <link rel="canonical" href="<%= request.original_url %>">
  
  <!-- JSON-LD Schema for Blog -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "Blog",
    "name": "<%= @meta_title %>",
    "description": "<%= @meta_description %>",
    "url": "<%= request.original_url %>",
    "publisher": {
      "@type": "Organization",
      "name": "Views",
      "logo": {
        "@type": "ImageObject",
        "url": "<%= request.base_url %>/icon.png"
      }
    },
    "blogPost": [
      <% @blog_posts.each_with_index do |post, index| %>
        {
          "@type": "BlogPosting",
          "headline": "<%= post.title %>",
          "description": "<%= post.excerpt %>",
          "author": {
            "@type": "Person",
            "name": "<%= post.user.name %>"
          },
          "datePublished": "<%= post.display_date.iso8601 %>",
          "dateModified": "<%= post.updated_at.iso8601 %>",
          "url": "<%= blog_url(post) %>",
          <% if post.images.any? %>
          "image": "<%= url_for(post.images.first) %>",
          <% end %>
          "articleSection": "Travel Guide",
          "wordCount": <%= post.content.split.size %>
        }<%= index < @blog_posts.count - 1 ? ',' : '' %>
      <% end %>
    ]
  }
  </script>
  
  <!-- JSON-LD Schema for Breadcrumbs -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    "itemListElement": [
      {
        "@type": "ListItem",
        "position": 1,
        "name": "Home",
        "item": "<%= root_url %>"
      },
      {
        "@type": "ListItem",
        "position": 2,
        "name": "Blog",
        "item": "<%= request.original_url %>"
      }
    ]
  }
  </script>
<% end %>
