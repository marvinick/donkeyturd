<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div>
      <h2 class="mt-6 text-center text-3xl font-bold text-gray-900">
        Join Views
      </h2>
      <p class="mt-2 text-center text-sm text-gray-600">
        Create an account to share and discover amazing places
      </p>
    </div>
    
    <!-- Google Sign In -->
    <div>
      <%= link_to user_google_oauth2_omniauth_authorize_path, method: :post, 
                  class: "group relative w-full flex justify-center py-3 px-4 border border-gray-300 text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500" do %>
        <svg class="w-5 h-5 mr-2" viewBox="0 0 24 24">
          <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
          <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
          <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
          <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
        </svg>
        Continue with Google
      <% end %>
    </div>
    
    <div class="relative">
      <div class="absolute inset-0 flex items-center">
        <div class="w-full border-t border-gray-300" />
      </div>
      <div class="relative flex justify-center text-sm">
        <span class="px-2 bg-gray-50 text-gray-500">Or sign up with email</span>
      </div>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), local: true,
                  class: "mt-8 space-y-6") do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="space-y-4">
        <div>
          <%= f.text_field :name, autofocus: true, autocomplete: "name",
                           placeholder: "Full name",
                           class: "relative block w-full px-3 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-lg focus:outline-none focus:ring-2 focus:ring-gray-900 focus:border-transparent" %>
        </div>
        <div>
          <%= f.email_field :email, autocomplete: "email",
                            placeholder: "Email address",
                            class: "relative block w-full px-3 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-lg focus:outline-none focus:ring-2 focus:ring-gray-900 focus:border-transparent" %>
        </div>
        <div>
          <%= f.password_field :password, autocomplete: "new-password",
                               placeholder: "Password (#{@minimum_password_length} characters minimum)",
                               class: "relative block w-full px-3 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-lg focus:outline-none focus:ring-2 focus:ring-gray-900 focus:border-transparent" %>
        </div>
        <div>
          <%= f.password_field :password_confirmation, autocomplete: "new-password",
                               placeholder: "Confirm password",
                               class: "relative block w-full px-3 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-lg focus:outline-none focus:ring-2 focus:ring-gray-900 focus:border-transparent" %>
        </div>
      </div>

      <div>
        <%= f.submit "Create account",
                     class: "group relative w-full flex justify-center py-3 px-4 border border-transparent text-sm font-medium rounded-lg text-white bg-gray-900 hover:bg-gray-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500" %>
      </div>

      <div class="text-center">
        <span class="text-sm text-gray-600">Already have an account? </span>
        <%= link_to "Sign in", new_session_path(resource_name),
                    class: "font-medium text-gray-900 hover:text-gray-700" %>
      </div>
    <% end %>
  </div>
</div>
